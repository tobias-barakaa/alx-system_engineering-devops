#!/bin/bash

# Replace 'www-data' with 'nginx' in Nginx configuration files
sed -i 's/user www-data;/user nginx;/' /etc/nginx/nginx.conf
sed -i 's/user www-data;/user nginx;/' /etc/nginx/sites-available/default

# Start Nginx
service nginx start

# Ensure Nginx is listening on port 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default

# Reload Nginx for changes to take effect
service nginx reload

# Verify Nginx process and port
if ps aux | grep -q "[n]ginx: master process"; then
    if nc -z 0 8080; then
        echo "Nginx is running as the nginx user and listening on port 8080."
        exit 0
    else
        echo "Nginx is running as the nginx user, but it's not listening on port 8080."
        exit 1
    fi
else
    echo "Nginx is not running as the nginx user."
    exit 1
fi
