#!/usr/bin/env bash
# This script displays information about subdomains.

# Get the domain name and subdomain.
domain="$1"
subdomain="$2"

# Check if the subdomain parameter is set.
if [ -z "$subdomain" ]; then
  # If not, print information for the subdomains www, lb-01, web-01, and web-02.
  for subdomain in www lb-01 web-02; do
    info_subdomain "$domain" "$subdomain"
  done
else
  # If yes, print information for the specified subdomain.
  info_subdomain "$domain" "$subdomain"
fi

# Function to print information about a subdomain.
function info_subdomain() {
  # Get the record type and destination of the subdomain.
  record_type=$(dig "$domain.$subdomain" | awk -F' ' '{print $5}')
  destination=$(dig "$domain.$subdomain" | awk -F' ' '{print $6}')

  # Print the information.
  echo "The subdomain $subdomain is a $record_type record and points to $destination"
}
