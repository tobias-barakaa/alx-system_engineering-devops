#!/usr/bin/env bash
# Function to print information about a subdomain.
function info_subdomain() {
  local domain="$1"
  local subdomain="$2"
  
  # Get the record type and destination of the subdomain.
  local record_type=$(dig "$subdomain.$domain" +short -t A)
  local destination=$(dig "$subdomain.$domain" +short)

  # Print the information.
  echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

# Get the domain name and subdomain from command-line arguments.
domain="$1"
subdomain="$2"

# Check if the subdomain parameter is set.
if [ -z "$subdomain" ]; then
  # If not, print information for the default subdomains.
  subdomains=("www" "lb-01" "web-01" "web-02")
  for sub in "${subdomains[@]}"; do
    info_subdomain "$domain" "$sub"
  done
else
  # If yes, print information for the specified subdomain.
  info_subdomain "$domain" "$subdomain"
fi
